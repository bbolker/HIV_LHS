\setlength{\blocktitleheight}{7\blocktitleheight}
\setbeamertemplate{block begin}{
  \begin{transbox} % Make background transparent
    \vspace{3mm}
    %% \begin{beamercolorbox}[leftskip=1mm]{block title}
    %%     %\color{orange}{\rule[1ex]{0.025\linewidth}{1mm}}
    %%     \usebeamercolor*{block title}
    %%     \usebeamerfont*{block title}
    %%     \insertblocktitle
    %%     %~~ \vspace{-0.5em}\huge\color{orange}{\dotfill}\vspace{0.5em}~~
    %% \end{beamercolorbox}
    \begin{center}\begin{tikzpicture}
      \node[text width=0.97\textwidth,inner sep=3mm,fill=macmaroon,draw=macgold,text=macgrey1,rounded corners,minimum height=\blocktitleheight] {\usebeamerfont*{block title}\insertblocktitle};
    \end{tikzpicture}\end{center}
    \vspace{3mm}
    \begin{beamercolorbox}[leftskip=9mm]{block body}
    \usebeamerfont*{block body}
    \usebeamercolor*{block body}
}
